<UserControl x:Class="CanteenAIS_Views.BaseTemplates.ComboFormField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="300"
             x:Name="root">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition SharedSizeGroup="Labels" Width="Auto"/>
            <ColumnDefinition SharedSizeGroup="Values" Width="*" MinWidth="200"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0"
               Style="{StaticResource FormLabelStyle}"
               Content="{Binding LabelText, ElementName=root}"/>
        <ComboBox Grid.Column="1"
                  Style="{StaticResource FormComboBoxStyle}"
                  ItemsSource="{Binding ItemsSource, ElementName=root, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                  SelectedIndex="{Binding SelectedIndex, ElementName=root, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedItem, ElementName=root, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>