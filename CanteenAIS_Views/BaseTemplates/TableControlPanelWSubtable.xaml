<UserControl x:Class="CanteenAIS_Views.BaseTemplates.TableControlPanelWSubtable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:CanteenAIS_Views.BaseTemplates"
             mc:Ignorable="d"
             d:DesignHeight="60" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CanteenAIS_Views;component/Styles/GenericWindowStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel LastChildFill="True">
        <!--<Button Content="Экспорт (.csv)"
                Command="{Binding ClickExport}"
                Style="{StaticResource CrudButtonStyle}"/>-->
        <Menu Margin="6" DockPanel.Dock="Right" IsMainMenu="False" UsesItemContainerTemplate="True"
              HorizontalContentAlignment="Stretch" FontSize="16" FontWeight="SemiBold" Background="LightGray"
              VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalAlignment="Center"
              BorderThickness="1" BorderBrush="DimGray">
            <MenuItem HorizontalContentAlignment="Stretch" FontSize="16" FontWeight="SemiBold"
                      Header="Экспорт">
                <MenuItem Header="CSV" Command="{Binding ClickExport}" CommandParameter="CSV"/>
                <MenuItem Header="Word" Command="{Binding ClickExport}" CommandParameter="Word"/>
                <MenuItem Header="Excel" Command="{Binding ClickExport}" CommandParameter="Excel"/>
            </MenuItem>
        </Menu>
        <Button Content="Фильтр" 
                Command="{Binding ClickFilter}"
                Style="{StaticResource CrudButtonStyle}"/>
        <Button Content="Удалить" 
                Command="{Binding ClickDelete}"
                IsEnabled="{Binding DeleteVisibility}"
                Style="{StaticResource CrudButtonStyle}"/>        
        <Button Content="Изменить" 
                Command="{Binding ClickEdit}"
                IsEnabled="{Binding EditVisibility}"
                Style="{StaticResource CrudButtonStyle}"/>
        <Button Content="Добавить" 
                Command="{Binding ClickAdd}"
                IsEnabled="{Binding WriteVisibility}"
                Style="{StaticResource CrudButtonStyle}"/>
        <Button Content="{Binding SubtableName}" 
                Command="{Binding ClickSubtable}"
                IsEnabled="{Binding SubtableVisibility}"
                Style="{StaticResource CrudButtonStyle}"/>
        <DockPanel LastChildFill="True">
            <Label Content="Поиск" Style="{StaticResource LabelStyle}"/>
            <TextBox Style="{StaticResource TextBoxStyle}" 
                Text="{Binding SearchSample, UpdateSourceTrigger=PropertyChanged}"/>
        </DockPanel>
    </DockPanel>
</UserControl>