<UserControl x:Class="CanteenAIS_Views.BaseTemplates.DialogButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CanteenAIS_Views.BaseTemplates"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300" x:Name="root">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CanteenAIS_Views;component/Styles/GenericWindowStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Style="{StaticResource ButtonPanelStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Margin="5"
                Content="{Binding ButtonContent, ElementName=root}"
                Style="{StaticResource DialogButtonStyle}"
                Command="{Binding ApplyCommand, ElementName=root}"/>

        <Button Grid.Column="1" Margin="5"
                Content="Отменить"
                Style="{StaticResource DialogButtonStyle}"
                Command="{Binding CancelCommand, ElementName=root}" 
                IsCancel="True"/>
    </Grid>
</UserControl>
