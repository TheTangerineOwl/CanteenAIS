<Window x:Class="CanteenAIS_Views.Tables.Supplies.SupplyProductAddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:template="clr-namespace:CanteenAIS_Views.BaseTemplates"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Style="{StaticResource SmallWindowStyle}" x:Name="window">

    <DockPanel>
        <template:DialogButtons DockPanel.Dock="Bottom"
                     ButtonContent="{Binding ButtonContent}"
                     ApplyCommand="{Binding ClickApply}"
                     CancelCommand="{Binding ClickCancel}"/>

        <GroupBox Style="{StaticResource DialogGroupBoxStyle}"
                 Header="{Binding TableTitle}">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource GroupBoxHeaderStyle}" CornerRadius="3,3,3,3">
                        <Label Content="{Binding}"/>
                    </Border>
                </DataTemplate>
            </GroupBox.HeaderTemplate>

            <StackPanel Margin="10" Grid.IsSharedSizeScope="True">
                <template:ComboFormField LabelText="Продукт"
                    ItemsSource="{Binding Products, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding Product, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />
                <template:DoubleFormField LabelText="Количество"
                    ValuePick="{Binding Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Minimum="0" Default="0" Maximum="10000000000"
                />
                <template:ComboFormField LabelText="Единица измерения"
                    ItemsSource="{Binding Units, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding Unit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />
                <template:DecimalFormField LabelText="Цена"
                    ValuePick="{Binding Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Minimum="0" Default="0" Maximum="10000000000"
                />
            </StackPanel>
        </GroupBox>
    </DockPanel>
</Window>