<Window x:Class="CanteenAIS_Views.Tables.SQLQueryWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CanteenAIS_Views.Tables"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Title="{Binding Title}"
             Style="{StaticResource WindowStyle}">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition MinWidth="100"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}" Content="SQL-запрос"/>
                <ScrollViewer Margin="10" Grid.Row="1" Grid.Column="0"
                              VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto">
                    <TextBox Margin="0" Style="{StaticResource TextBoxStyle}" TextWrapping="Wrap"
                         VerticalContentAlignment="Top" MaxLines="10000"
                         Text="{Binding Query, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             ScrollViewer.CanContentScroll="True" AcceptsReturn="True" AcceptsTab="True"/>
                </ScrollViewer>
            <StackPanel Grid.Row="2" Grid.Column="0" VerticalAlignment="Bottom" Orientation="Horizontal">
                <Button Style="{StaticResource CrudButtonStyle}"
                        Content="Выполнить"
                        Command="{Binding ClickExecuteQuery}"/>
                <Button Style="{StaticResource CrudButtonStyle}"
                        Content="Очистить"
                        Command="{Binding ClickClear}"/>
            </StackPanel>
            <GridSplitter Width="3" Grid.RowSpan="3" Grid.Column="1" ResizeDirection="Columns" ResizeBehavior="PreviousAndNext"/>
            <DockPanel Grid.Column="2" Grid.RowSpan="3" LastChildFill="True">
                <Label Style="{StaticResource LabelStyle}" Content="Результат" DockPanel.Dock="Top"/>
                <DataGrid ItemsSource="{Binding DataBaseTable}"
                      Margin="5,0,20,20"
                      Style="{StaticResource TableDataGridStyle}"/>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
