<Window x:Class="CanteenAIS_Views.Tables.AssortmentGroups.AssortmentGroupWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CanteenAIS_Views.Tables.AssortmentGroups"
        xmlns:template="clr-namespace:CanteenAIS_Views.BaseTemplates"
            xmlns:vm="clr-namespace:CanteenAIS_ViewModel.EntityViewModels.AssortmentGroup;assembly=CanteenAIS_ViewModel"
            Title="{Binding Title}"
        Style="{DynamicResource WindowStyle}"
        >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CanteenAIS_Views;component/Styles/GenericWindowStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <DockPanel LastChildFill="True">
            <template:TableControlPanel Margin="10,5,10,5" DockPanel.Dock="Bottom"/>

            <DataGrid x:Name="dtGrid" Style="{StaticResource TableDataGridStyle}"
                     SelectedIndex="{Binding SelectedIndex, UpdateSourceTrigger=PropertyChanged}"
                     ItemsSource="{Binding Table, UpdateSourceTrigger=PropertyChanged}"
                     SelectionChanged="DataGrid_SelectionChanged" 
                     AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"/>
        </DockPanel>
    </Grid>
</Window>
