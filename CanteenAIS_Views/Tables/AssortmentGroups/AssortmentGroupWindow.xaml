<Window x:Class="CanteenAIS_Views.Tables.AssortmentGroups.AssortmentGroupWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CanteenAIS_Views.Tables.AssortmentGroups"
            xmlns:vm="clr-namespace:CanteenAIS_ViewModel.EntityViewModels.AssortmentGroup;assembly=CanteenAIS_ViewModel"
            Title="{Binding Title}"
             Height="450" Width="800" Background="PaleGreen"
        >
    <Grid>
        <DockPanel LastChildFill="True">
            <DockPanel DockPanel.Dock="Bottom" LastChildFill="True">
                <Label Margin="10,10,5,10" DockPanel.Dock="Left" VerticalAlignment="Center"
                           FontWeight="SemiBold" FontSize="16"
                    Content="Поиск"/>
                <Button Margin="5,10,20,10"
                        Content="Удалить" FontSize="16" FontWeight="SemiBold"
                        DockPanel.Dock="Right"
                        Command="{Binding ClickDelete}"
                        IsEnabled="{Binding DeleteVisibility, UpdateSourceTrigger=PropertyChanged}"
                />
                <Button Margin="5,10,5,10"
                        Content="Изменить" FontSize="16" FontWeight="SemiBold"
                        DockPanel.Dock="Right"
                        Command="{Binding ClickEdit}"
                        IsEnabled="{Binding EditVisibility, UpdateSourceTrigger=PropertyChanged}"
                />
                <Button Margin="5,10,5,10"
                        Content="Добавить" FontSize="16" FontWeight="SemiBold"
                        DockPanel.Dock="Right"
                        Command="{Binding ClickAdd}"
                        IsEnabled="{Binding WriteVisibility, UpdateSourceTrigger=PropertyChanged}"
                />
                <TextBox Margin="5,10,5,10" DockPanel.Dock="Left"
                    VerticalContentAlignment="Stretch" HorizontalContentAlignment="Left"
                    Text="{Binding SearchSample, UpdateSourceTrigger=PropertyChanged}"/>
            </DockPanel>
            <DataGrid FontSize="16" Margin="20,20,20,0"
                CanUserAddRows="False" CanUserDeleteRows="False" CanUserSortColumns="False"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto"
                SelectionMode="Single" SelectedIndex="{Binding SelectedIndex, UpdateSourceTrigger=PropertyChanged}"
                ItemsSource="{Binding Table, UpdateSourceTrigger=PropertyChanged}"
                      IsReadOnly="True" MouseDown="DataGrid_MouseDown" MouseLeave="DataGrid_MouseLeave" SelectionChanged="DataGrid_SelectionChanged"
            />
        </DockPanel>
    </Grid>
</Window>
