<Window x:Class="CanteenAIS_Views.Tables.AssortmentGroups.AssortmentGroupFilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:CanteenAIS_Views.Tables.AssortmentGroups"
        xmlns:template="clr-namespace:CanteenAIS_Views.BaseTemplates"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Style="{DynamicResource SmallWindowStyle}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CanteenAIS_Views;component/Styles/GenericWindowStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel>
        <template:DialogButtons DockPanel.Dock="Bottom"
                     ButtonContent="{Binding ButtonContent}"
                     ApplyCommand="{Binding ClickApply}"
                     CancelCommand="{Binding ClickCancel}"/>

        <GroupBox Style="{StaticResource DialogGroupBoxStyle}"
                 Header="{Binding TableTitle}">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource GroupBoxHeaderStyle}">
                        <Label Content="{Binding}"/>
                    </Border>
                </DataTemplate>
            </GroupBox.HeaderTemplate>

            <StackPanel Margin="10">
                <template:TextFormFieldChecked LabelText="Id" 
                                             IsChecked="{Binding IdCheck, Mode=TwoWay}"
                                             Text="{Binding IdText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             MaxLength="10"/>

                <template:TextFormFieldChecked LabelText="Имя"
                                             IsChecked="{Binding NameCheck, Mode=TwoWay}"
                                             Text="{Binding NameText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             MaxLength="100"/>
            </StackPanel>
        </GroupBox>
    </DockPanel>
</Window>