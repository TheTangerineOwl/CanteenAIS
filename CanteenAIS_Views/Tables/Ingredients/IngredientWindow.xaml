<Window x:Class="CanteenAIS_Views.Tables.Dishes.IngredientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:template="clr-namespace:CanteenAIS_Views.BaseTemplates"
        Title="{Binding Title}"
        Style="{StaticResource WindowStyle}">

    <Grid>
        <DockPanel LastChildFill="True">
            <Menu Margin="6" DockPanel.Dock="Bottom" IsMainMenu="False" UsesItemContainerTemplate="True"
              HorizontalContentAlignment="Stretch" FontSize="16" FontWeight="SemiBold" Background="LightGray"
              VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalAlignment="Center"
              BorderThickness="1" BorderBrush="DimGray">
                <MenuItem HorizontalContentAlignment="Stretch" FontSize="16" FontWeight="SemiBold"
                      Header="Экспорт">
                    <MenuItem Header="CSV" Command="{Binding ClickExport}" CommandParameter="CSV"/>
                    <MenuItem Header="Word" Command="{Binding ClickExport}" CommandParameter="Word"/>
                    <MenuItem Header="Excel" Command="{Binding ClickExport}" CommandParameter="Excel"/>
                </MenuItem>
            </Menu>

            <DataGrid x:Name="dtGrid" Style="{StaticResource TableDataGridStyle}"
                     ItemsSource="{Binding Table, UpdateSourceTrigger=PropertyChanged}"
                     AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"/>
        </DockPanel>
    </Grid>
</Window>
