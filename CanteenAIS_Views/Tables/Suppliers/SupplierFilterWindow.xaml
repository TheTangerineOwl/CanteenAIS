<Window x:Class="CanteenAIS_Views.Tables.Suppliers.SupplierFilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:template="clr-namespace:CanteenAIS_Views.BaseTemplates"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Style="{StaticResource SmallWindowStyle}">

    <DockPanel>
        <template:DialogButtons DockPanel.Dock="Bottom"
                     ButtonContent="{Binding ButtonContent}"
                     ApplyCommand="{Binding ClickApply}"
                     CancelCommand="{Binding ClickCancel}"/>

        <GroupBox Style="{StaticResource DialogGroupBoxStyle}"
                 Header="{Binding TableTitle}">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource GroupBoxHeaderStyle}" CornerRadius="3,3,3,3">
                        <Label Content="{Binding}"/>
                    </Border>
                </DataTemplate>
            </GroupBox.HeaderTemplate>

            <StackPanel Margin="10" Grid.IsSharedSizeScope="True">
                <template:UIntFormFieldChecked x:Name="idRow" LabelText="Id"
                    IsChecked="{Binding IdCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ValuePick="{Binding Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Minimum="1" Default="1" Maximum="1000000000"/>
                <template:TextFormFieldChecked LabelText="Имя"
                    IsChecked="{Binding NameCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    MaxLength="100"/>
                <template:ComboFormFieldChecked LabelText="Улица"
                    IsChecked="{Binding StreetCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ItemsSource="{Binding Streets, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding Street, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />
                <template:TextFormFieldChecked LabelText="Здание"
                    IsChecked="{Binding BuildingCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Text="{Binding Building, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    MaxLength="16"
                />
                <template:ComboFormFieldChecked LabelText="Руководитель"
                    IsChecked="{Binding HeadCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ItemsSource="{Binding Heads, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding Head, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />
                <template:ComboFormFieldChecked LabelText="Банк"
                    IsChecked="{Binding BankCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ItemsSource="{Binding Banks, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding Bank, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />
                <template:TextFormFieldChecked LabelText="Расчетный счет"
                    IsChecked="{Binding AccountCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Text="{Binding Account, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    MaxLength="20"
                />
                <template:TextFormFieldChecked LabelText="ИНН"
                    IsChecked="{Binding INNCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Text="{Binding INN, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    MaxLength="10"
                />
            </StackPanel>
        </GroupBox>
    </DockPanel>
</Window>