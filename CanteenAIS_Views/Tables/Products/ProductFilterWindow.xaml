<Window x:Class="CanteenAIS_Views.Tables.Products.ProductFilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:template="clr-namespace:CanteenAIS_Views.BaseTemplates"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Style="{StaticResource SmallWindowStyle}">

    <DockPanel>
        <template:DialogButtons DockPanel.Dock="Bottom"
                     ButtonContent="{Binding ButtonContent}"
                     ApplyCommand="{Binding ClickApply}"
                     CancelCommand="{Binding ClickCancel}"/>

        <GroupBox Style="{StaticResource DialogGroupBoxStyle}"
                 Header="{Binding TableTitle}">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource GroupBoxHeaderStyle}" CornerRadius="3,3,3,3">
                        <Label Content="{Binding}"/>
                    </Border>
                </DataTemplate>
            </GroupBox.HeaderTemplate>

            <StackPanel Margin="10" Grid.IsSharedSizeScope="True">
                <template:UIntFormFieldChecked x:Name="idRow" LabelText="Id"
                    IsChecked="{Binding IdCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ValuePick="{Binding Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Minimum="1" Default="1" Maximum="1000000000"/>
                <template:TextFormFieldChecked LabelText="Имя"
                    IsChecked="{Binding NameCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    MaxLength="100"/>
                <template:DoubleFormFieldChecked LabelText="Остаток на складе"
                    IsChecked="{Binding StockCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ValuePick="{Binding Stock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Minimum="0" Default="0" Maximum="1000000000"
                />
                <template:ComboFormFieldChecked LabelText="Единица измерения"
                    IsChecked="{Binding UnitCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ItemsSource="{Binding Units, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding Unit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />
                <template:DecimalFormFieldChecked LabelText="Наценка, %"
                    IsChecked="{Binding MarkupCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ValuePick="{Binding Markup, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Minimum="0" Default="0" Maximum="10000"
                />
                <template:ComboFormFieldChecked LabelText="Поставщик"
                    IsChecked="{Binding SupplierCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ItemsSource="{Binding Suppliers, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding Supplier, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />
            </StackPanel>
        </GroupBox>
    </DockPanel>
</Window>