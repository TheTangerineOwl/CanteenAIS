<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">

    <Style x:Key="WindowStyle" TargetType="Window">
        <Setter Property="Height" Value="450"/>
        <Setter Property="Width" Value="800"/>
        <Setter Property="Background" Value="PaleGreen"/>
    </Style>

    <!-- Стиль для небольших окон -->
    <Style x:Key="SmallWindowStyle" TargetType="Window">
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="Background" Value="LightGreen"/>
        <Setter Property="SizeToContent" Value="WidthAndHeight"/>
    </Style>

    <!-- Стиль для кнопок в нижней панели -->
    <Style x:Key="DialogButtonStyle" TargetType="Button">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="100"/>
    </Style>

    <!-- Стиль для GroupBox -->
    <Style x:Key="DialogGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Background" Value="MintCream"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Стиль для заголовка GroupBox -->
    <Style x:Key="GroupBoxHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="MintCream"/>
    </Style>

    <!-- Стиль для меток в формах -->
    <Style x:Key="FormLabelStyle" TargetType="Label">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Стиль для текстовых полей в формах -->
    <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="FormComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="IsReadOnly" Value="True"/>
    </Style>

    <Style x:Key="FormDateTimePickerStyle" TargetType="xctk:DateTimePicker">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CalendarDisplayMode" Value="Month"/>
        <Setter Property="ClipValueToMinMax" Value="True"/>
        <Setter Property="Minimum" Value="2000-01-01"/>
        <Setter Property="Maximum" Value="3000-01-01"/>
    </Style>

    <Style x:Key="FormUIntPickerStyle" TargetType="xctk:UIntegerUpDown">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="ClipValueToMinMax" Value="True"/>
        <Setter Property="IsReadOnly" Value="False"/>
        <Setter Property="AllowSpin" Value="True"/>
        <Setter Property="AllowTextInput" Value="True"/>
        <Setter Property="Increment" Value="1"/>
    </Style>

    <Style x:Key="FormDecimalPickerStyle" TargetType="xctk:DecimalUpDown">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="ClipValueToMinMax" Value="True"/>
        <Setter Property="AllowSpin" Value="True"/>
        <Setter Property="AllowTextInput" Value="True"/>
        <Setter Property="Increment" Value="1"/>
        <Setter Property="FormatString" Value="F2"/>
    </Style>

    <Style x:Key="FormDoublePickerStyle" TargetType="xctk:DoubleUpDown">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="ClipValueToMinMax" Value="True"/>
        <Setter Property="AllowSpin" Value="True"/>
        <Setter Property="AllowTextInput" Value="True"/>
        <Setter Property="Increment" Value="1"/>
        <Setter Property="FormatString" Value="F3"/>
    </Style>

    <!-- Стиль для чекбоксов в формах -->
    <Style x:Key="FormCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <!-- Стиль для нижней панели с кнопками -->
    <Style x:Key="ButtonPanelStyle" TargetType="Grid">
        <Setter Property="DockPanel.Dock" Value="Bottom"/>
        <Setter Property="Margin" Value="0,10,0,0"/>
    </Style>

    <Style x:Key="CrudButtonStyle" TargetType="Button">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="DockPanel.Dock" Value="Right"/>
    </Style>

    <Style x:Key="TextBoxStyle" TargetType="TextBox">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="DockPanel.Dock" Value="Left"/>
    </Style>

    <Style x:Key="LabelStyle" TargetType="Label">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="DockPanel.Dock" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="TableDataGridStyle" TargetType="DataGrid">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Margin" Value="20,20,20,0"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserDeleteRows" Value="False"/>
        <Setter Property="CanUserSortColumns" Value="False"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="AutoGenerateColumns" Value="True"/>
    </Style>

</ResourceDictionary>