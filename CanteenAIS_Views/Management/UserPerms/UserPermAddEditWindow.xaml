<Window x:Class="CanteenAIS_Views.Management.UserPerms.UserPermAddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:template="clr-namespace:CanteenAIS_Views.BaseTemplates"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Style="{StaticResource SmallWindowStyle}">

    <DockPanel>
        <template:DialogButtons DockPanel.Dock="Bottom"
                     ButtonContent="{Binding ButtonContent}"
                     ApplyCommand="{Binding ClickApply}"
                     CancelCommand="{Binding ClickCancel}"/>

        <GroupBox Style="{StaticResource DialogGroupBoxStyle}"
                 Header="{Binding TableTitle}">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource GroupBoxHeaderStyle}" CornerRadius="3,3,3,3">
                        <Label Content="{Binding}"/>
                    </Border>
                </DataTemplate>
            </GroupBox.HeaderTemplate>

            <StackPanel Margin="10" Grid.IsSharedSizeScope="True">
                <template:ComboFormField LabelText="Пользователь"
                    ItemsSource="{Binding Users, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding User, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />
                <template:ComboFormField LabelText="Пункт меню"
                    ItemsSource="{Binding Elements, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding Element, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />
                <template:CheckFormField LabelText="Чтение"
                    Default="False"
                    IsValueChecked="{Binding CanRead, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />
                <template:CheckFormField LabelText="Запись"
                    Default="False"
                    IsValueChecked="{Binding CanWrite, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />
                <template:CheckFormField LabelText="Редактирование"
                    Default="False"
                    IsValueChecked="{Binding CanEdit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />
                <template:CheckFormField LabelText="Удаление"
                    Default="False"
                    IsValueChecked="{Binding CanDelete, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />
            </StackPanel>
        </GroupBox>
    </DockPanel>
</Window>